<% content_for :title, "Products" %>

<div class="w-full p-4 lg:p-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h2 class="font-bold text-2xl">Results</h2>
  </div>
  <div id="products" class="min-w-full">
    <% if @products.any? %>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-6">
        <% @products.each do |product| %>
          <div class="block bg-white shadow-sm rounded-lg p-4">
            <%= render product %>
            <div class="btn mt-4">
              <%= link_to "Show this product", product, class: "rounded-md border border-transparent bg-fairpink-50 px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center my-10">No products found.</p>
    <% end %>
  </div>
</div>
